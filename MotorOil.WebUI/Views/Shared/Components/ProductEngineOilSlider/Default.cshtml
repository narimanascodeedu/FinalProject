@model IEnumerable<Product>


<div class="col-lg-12">
    <div class="li-section-title">
        <h2>
            <span>Mühərrik yağları</span>
        </h2>
    </div>
    <div class="li-banner-2 pt-15">
        <div class="row">
            <!-- Begin Single Banner Area -->
            <div class="col-lg-6 col-md-6">
                <div class="single-banner">
                    <a href="#">
                        <img src="~/assets/images/engineOilSlider3.jpg" alt="Li's Static Banner">
                    </a>
                </div>
            </div>
            <!-- Single Banner Area End Here -->
            <!-- Begin Single Banner Area -->
            <div class="col-lg-6 col-md-6">
                <div class="single-banner pt-xs-30">
                    <a href="#">
                        <img src="~/assets/images/engineOilSlider2.jpg" alt="Li's Static Banner">
                    </a>
                </div>
            </div>
            <!-- Single Banner Area End Here -->
        </div>
    </div>
    <div class="row">
        <div class="product-active owl-carousel">
            @foreach (var item in Model)
            {

                <div class="col-lg-12">
                    <!-- single-product-wrap start -->
                <div class="single-product-wrap">
                        <div class="product-image">
                            <a asp-controller="shop" asp-action="details" asp-route-id="@item.Id">
                                <img src="~/uploads/images/@item.Images.FirstOrDefault(i => i.IsMain)?.Name" alt="Li's Product Image">
                            </a>
                            <span class="sticker">New</span>
                        </div>
                        <div class="product_desc">
                            <div class="product_desc_info">
                                <div class="product-review">
                                    <h5 class="manufacturer">
                                        <a asp-controller="shop" asp-action="details" asp-route-id="@item.Id">@item.Category.Name</a>
                                    </h5>
                                </div>
                                <h4><a class="product_name" asp-controller="shop" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h4>
                                <div class="price-box">
                                    <span class="new-price">@item.Price.ToString("0.00₼")</span>
                                </div>
                            </div>
                            <div class="add-actions">
                                <ul class="add-actions-link">
                                    <li class="add-cart active"><a style="cursor: pointer;" onclick="addToBasket(event)" data-product-id="@item.Id">Səbətə at</a></li>
                                    <li><a class="links-details" href="javascript:addToFavorites(@item.Id)"><i class="fa fa-heart-o"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- single-product-wrap end -->
            </div>
            }
        </div>
    </div>
</div>

