@model BlogPost

@{
    ViewData["Title"] = "Ətraflı";
}


<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h1>Ətraflı</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">Postlar</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Ətraflı</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Horizontal-border table start -->
    <div class="card">
        <div class="card-header">
            <div class="card-header-right">
                <i class="icofont icofont-spinner-alt-5"></i>
            </div>

        </div>
        <div class="card-block">
            <div>
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-2 col-form-label">Başlıq</label>
                    <div class="col-sm-10">
                        <p>
                            @Model.Title
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Şəkil</label>
                    <div class="col-sm-10">
                        <label class="image-viewer" style="background-image:url(/uploads/images/@Model.ImagePath)"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Body" class="col-sm-2 col-form-label">Mətn</label>
                    <div class="col-sm-10">
                        <div>
                            @Html.Raw(@Model.Body)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Tags</label>
                    <div class="col-sm-10">
                        @foreach (var tag in Model.TagCloud.Select(tc => tc.Tag))
                           {
                               <span class="badge badge-info">
                                   @tag.Text
                               </span>
                           }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        @if (User.HasAccess("admin.blogposts.edit"))
                        {
                        <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Redaktə</a>
                        <a asp-action="index" class="btn btn-info">Geri</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Horizontal-border table end -->
</div>
<!-- Page-body end -->

