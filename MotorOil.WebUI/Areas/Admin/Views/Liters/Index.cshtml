@model IEnumerable<ProductLiter>

@{
    ViewData["Title"] = "Litr";
}




<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h1>Litr</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Litr</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Horizontal-border table start -->
    <div class="card">
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Ad
                            </th>
                            <th>
                                Tarix
                            </th>
                            <th class="operations">
                                @if (User.HasAccess("admin.liters.create"))
                                {
                                    <a asp-action="Create" class="btn btn-sm btn-primary">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                }
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td class="operations">
                                    @if (User.HasAccess("admin.liters.edit"))
                                        {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    }
                                    @if (User.HasAccess("admin.liters.details"))
                                        {
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fa fa-circle-info"></i>
                                    </a>
                                    }
                                    @if (User.HasAccess("admin.liters.remove"))
                                        {
                                    <a class="btn btn-sm btn-danger" onclick="removeEntity(@item.Id,'@item.Name')">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Horizontal-border table end -->
    @Html.AntiForgeryToken()
</div>
<!-- Page-body end -->
@section addcss{
<link rel="stylesheet" href="~/libs/toastr.js/toastr.min.css" />
<style>
    th.operations i,
    td.operations i {
        margin: 0;
    }

    th.operations,
    td.operations {
        max-width: 148px;
        width: 148px;
        text-align: right;
        color: #fff;
    }
</style>
}


@section addjs {
<script src="~/libs/sweetalert/sweetalert.min.js"></script>
<script src="~/libs/toastr.js/toastr.min.js"></script>
<script src="~/libs/toastr.js/toastr.customize.js"></script>




<script class="removeable">
    function removeEntity(id,name) {
        swal({
             title: "Diqqet",
             text: `Eminsiniz ki.. '${name}' silinsin ?`,
             icon: "warning",
             buttons: true,
             dangerMode: true,
             buttons: ["Xeyr", "Beli"],
            })
            .then((value) => {
                if (value == true) {

                    let vToken = $('[name=__RequestVerificationToken]').val();

                    let formData = new FormData();

                    formData.set('__RequestVerificationToken',vToken);
                    formData.set('id',id);

                    $.ajax({
                        url: `@Url.Action("Delete")`,
                        type: 'POST',
                        data: formData,
                        contentType:false,
                        processData:false,
                        success: function(response) {
                              console.log(response);

                              if (response.error == true)
                              {
                                  toastr.error(response.message);
                                  return;
                              }

                              location.reload();

                        },
                        error: function(errorResponse) {
                              console.error(errorResponse);
                        }
                    });
                }
            });
    }
</script>
}