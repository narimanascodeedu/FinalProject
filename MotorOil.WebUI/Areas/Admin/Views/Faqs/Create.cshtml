@model Faq

@{
    ViewData["Title"] = "Əlavə Et";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h1>Əlavə Et</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">Faq</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Əlavə Et</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Horizontal-border table start -->
    <div class="card">
        <div class="card-header">
            <div class="card-header-right">
                <i class="icofont icofont-spinner-alt-5"></i>
            </div>

        </div>
        <div class="card-block">
            <form method="post" autocomplete="off">
                <div class="form-group row">
                    <label asp-for="Question" class="col-sm-2 col-form-label">Sual</label>
                    <div class="col-sm-10">
                        <input asp-for="Question" class="form-control" />
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Answer" class="form-control" id="answer"></textarea>
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <button class="btn btn-primary mr-2">Save</button>
                        <a asp-action="index" class="btn btn-info">İmtina</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Horizontal-border table end -->
</div>
<!-- Page-body end -->
@section addjs{
<script class="removeable" src="~/libs/ckeditor5/ckeditor.min.js"></script>
<script>
    ClassicEditor
    .create( document.querySelector( '#answer' ) )
    .catch( error => {
        console.error( error );
    } );
</script>
}
